FROM golang:1.21-alpine

WORKDIR /app

# Install build dependencies
RUN apk add --no-cache \
    git \
    make \
    bash \
    curl

# Copy go.mod and go.sum first for better caching
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build tools
RUN go build -v ./cmd/...

# Run tests by default
CMD ["go", "test", "-v", "./..."] 