#!/bin/bash
set -euo pipefail

# Check if .git-goals file exists
if [ ! -f .git-goals ]; then
    echo "No goals found. Use 'git goals create' to add a new goal."
    exit 0
fi

echo "Goal Report"
echo "==========="

while IFS='|' read -r id status description; do
    id=${id#\#}
    echo "Goal ID: ${id## }"
    echo "Status: ${status## }"
    echo "Description: ${description## }"
    echo "---"
done < .git-goals

