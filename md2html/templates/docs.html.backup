{{define "docs.html"}}{{template "base" .}}{{end}}

{{define "body-content"}}
    <div id="status" class="connection-status">Connected</div>
    <div class="docs-layout">
        <button class="mobile-nav-toggle" id="mobile-nav-toggle">
            <span></span>
            <span></span>
            <span></span>
        </button>
        <nav class="sidebar" id="sidebar">
            {{template "sidebar-content" .}}
        </nav>
        <main class="main-content">
            {{.Content}}
        </main>
    </div>
{{end}}

{{define "sidebar-content"}}
    {{$hierarchy := loadJSON "command-hierarchy.json"}}
    <div class="sidebar-header">
        <h1>{{$hierarchy.cli.short}}</h1>
    </div>
    <div class="sidebar-nav">
        <div class="nav-section">
            <h3>Getting Started</h3>
            <ul class="nav-list">
                <li><a href="/">Home</a></li>
                <li><a href="/installation">Installation</a></li>
                <li><a href="/examples">Examples</a></li>
            </ul>
        </div>
        <div class="nav-section">
            <h3>Core Command</h3>
            <ul class="nav-list">
                <li><a href="/{{$hierarchy.cli.name}}">{{$hierarchy.cli.name}}</a></li>
            </ul>
        </div>
        {{range $hierarchy.cli.subcommands}}
        <div class="nav-section">
            <h3>{{.name}}</h3>
            <ul class="nav-list">
                <li><a href="/{{.path | replace " " "_"}}">{{.short}}</a>
                {{if .subcommands}}
                    <ul class="nav-list">
                        {{range .subcommands}}
                        <li><a href="/{{.path | replace " " "_"}}">{{.name}}</a></li>
                        {{end}}
                    </ul>
                {{end}}
                </li>
            </ul>
        </div>
        {{end}}
    </div>
{{end}}

{{define "styles"}}
    <style>
        :root {
            /* Light theme colors (GitHub default) */
            --color-canvas-default: #ffffff;
            --color-canvas-subtle: #f6f8fa;
            --color-border-default: #d0d7de;
            --color-border-muted: #d8dee4;
            --color-fg-default: #1f2328;
            --color-fg-muted: #656d76;
            --color-fg-subtle: #6e7781;
            --color-accent-emphasis: #0969da;
            --color-accent-subtle: rgba(54, 179, 126, 0.15);
            --color-success-emphasis: #1a7f37;
            --color-danger-emphasis: #cf222e;
            --color-neutral-subtle: rgba(175, 184, 193, 0.2);
            --color-btn-border: rgba(31, 35, 40, 0.15);
            --color-btn-shadow: rgba(31, 35, 40, 0.04);
            --color-btn-inset-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.25);
            --color-btn-hover-bg: #f3f4f6;
            --color-btn-hover-border: rgba(31, 35, 40, 0.15);
            --color-btn-active-bg: hsla(220, 14%, 93%, 1);
            --color-btn-active-border: rgba(31, 35, 40, 0.15);
            --color-primer-shadow-inset: inset 0 1px 0 rgba(255, 255, 255, 0.25);
        }

        @media (prefers-color-scheme: dark) {
            :root {
                /* Dark theme colors (GitHub dark) */
                --color-canvas-default: #0d1117;
                --color-canvas-subtle: #161b22;
                --color-border-default: #30363d;
                --color-border-muted: #21262d;
                --color-fg-default: #e6edf3;
                --color-fg-muted: #7d8590;
                --color-fg-subtle: #8b949e;
                --color-accent-emphasis: #2f81f7;
                --color-accent-subtle: rgba(56, 139, 253, 0.15);
                --color-success-emphasis: #3fb950;
                --color-danger-emphasis: #f85149;
                --color-neutral-subtle: rgba(110, 118, 129, 0.1);
                --color-btn-border: rgba(240, 246, 252, 0.1);
                --color-btn-shadow: none;
                --color-btn-inset-shadow: none;
                --color-btn-hover-bg: rgba(177, 186, 196, 0.12);
                --color-btn-hover-border: rgba(240, 246, 252, 0.1);
                --color-btn-active-bg: rgba(177, 186, 196, 0.2);
                --color-btn-active-border: rgba(240, 246, 252, 0.1);
                --color-primer-shadow-inset: none;
            }
        }

        body {
            margin: 0;
            padding: 0;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica', 'Arial', sans-serif;
            background: var(--color-canvas-default);
            color: var(--color-fg-default);
            font-size: 16px;
        }

        .connection-status {
            position: fixed;
            top: 16px;
            right: 16px;
            background: var(--color-success-emphasis);
            color: white;
            padding: 4px 8px;
            border-radius: 3px;
            font-size: 12px;
            font-weight: 500;
            z-index: 1000;
        }

        .connection-status.disconnected {
            background: var(--color-danger-emphasis);
        }

        /* Layout styles - GitHub docs inspired */
        .docs-layout {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 280px;
            min-width: 280px;
            background: var(--color-canvas-default);
            border-right: 1px solid var(--color-border-muted);
            position: sticky;
            top: 0;
            height: 100vh;
            overflow-y: auto;
            padding: 24px 0;
        }

        .sidebar-header {
            padding: 0 16px 16px;
            border-bottom: 1px solid var(--color-border-muted);
            margin-bottom: 24px;
        }

        .sidebar-header h1 {
            font-size: 16px;
            font-weight: 600;
            color: var(--color-fg-default);
            margin: 0;
        }

        .sidebar-nav {
            padding: 0 16px;
        }

        .main-content {
            flex: 1;
            max-width: none;
            padding: 32px 48px;
            background: var(--color-canvas-default);
            overflow-x: auto;
        }

        /* Main content typography */
        .main-content h1 {
            font-size: 32px;
            font-weight: 600;
            color: var(--color-fg-default);
            margin: 0 0 16px 0;
            padding-bottom: 8px;
            border-bottom: 1px solid var(--color-border-muted);
        }

        .main-content h2 {
            font-size: 24px;
            font-weight: 600;
            color: var(--color-fg-default);
            margin: 32px 0 16px 0;
            padding-bottom: 4px;
            border-bottom: 1px solid var(--color-border-muted);
        }

        .main-content h3 {
            font-size: 20px;
            font-weight: 600;
            color: var(--color-fg-default);
            margin: 24px 0 12px 0;
        }

        .main-content h4, .main-content h5, .main-content h6 {
            font-size: 16px;
            font-weight: 600;
            color: var(--color-fg-default);
            margin: 20px 0 8px 0;
        }

        .main-content p {
            line-height: 1.6;
            margin: 0 0 16px 0;
        }

        .main-content ul, .main-content ol {
            margin: 0 0 16px 0;
            padding-left: 20px;
        }

        .main-content li {
            line-height: 1.6;
            margin-bottom: 4px;
        }

        .main-content blockquote {
            margin: 0 0 16px 0;
            padding: 0 16px;
            color: var(--color-fg-muted);
            border-left: 4px solid var(--color-border-default);
        }

        .main-content code:not(pre code) {
            background: var(--color-neutral-subtle);
            color: var(--color-fg-default);
            padding: 2px 4px;
            border-radius: 3px;
            font-size: 85%;
        }

        .main-content pre {
            background: var(--color-canvas-subtle);
            border: 1px solid var(--color-border-default);
            border-radius: 6px;
            padding: 16px;
            overflow-x: auto;
            margin: 0 0 16px 0;
        }

        .main-content pre code {
            background: none;
            color: var(--color-fg-default);
            padding: 0;
            font-size: 85%;
        }

        /* Navigation styles */
        .nav-section {
            margin-bottom: 24px;
        }

        .nav-section h3 {
            color: var(--color-fg-muted);
            font-size: 11px;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            margin: 0 0 8px 0;
            font-weight: 600;
        }

        .nav-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .nav-list li {
            margin-bottom: 2px;
        }

        .nav-list a {
            display: block;
            color: var(--color-fg-muted);
            text-decoration: none;
            padding: 6px 12px;
            border-radius: 6px;
            font-size: 13px;
            line-height: 1.4;
            transition: all 0.15s ease;
            border: 1px solid transparent;
        }

        .nav-list a:hover {
            color: var(--color-accent-emphasis);
            background: var(--color-accent-subtle);
            border-color: transparent;
        }

        .nav-list a.active {
            color: white;
            background: var(--color-accent-emphasis);
            font-weight: 500;
        }

        /* Sub-navigation */
        .nav-list .nav-list {
            margin-left: 8px;
            margin-top: 4px;
            border-left: 1px solid var(--color-border-muted);
            padding-left: 4px;
        }

        .nav-list .nav-list a {
            font-size: 12px;
            padding: 4px 8px;
            color: var(--color-fg-subtle);
        }

        .nav-list .nav-list a:hover {
            color: var(--color-accent-emphasis);
            background: var(--color-accent-subtle);
        }

        /* Responsive design */
        @media (max-width: 1200px) {
            .sidebar {
                width: 260px;
                min-width: 260px;
            }

            .main-content {
                padding: 24px 32px;
            }
        }

        /* Mobile nav toggle */
        .mobile-nav-toggle {
            display: none;
            position: fixed;
            top: 16px;
            left: 16px;
            z-index: 1001;
            background: var(--color-canvas-subtle);
            border: 1px solid var(--color-btn-border);
            border-radius: 6px;
            padding: 8px;
            cursor: pointer;
            flex-direction: column;
            gap: 3px;
            box-shadow: var(--color-btn-shadow);
        }

        .mobile-nav-toggle:hover {
            background: var(--color-btn-hover-bg);
            border-color: var(--color-btn-hover-border);
        }

        .mobile-nav-toggle span {
            width: 18px;
            height: 2px;
            background: var(--color-fg-default);
            transition: all 0.3s ease;
        }

        .mobile-nav-toggle.active span:nth-child(1) {
            transform: rotate(45deg) translate(5px, 5px);
        }

        .mobile-nav-toggle.active span:nth-child(2) {
            opacity: 0;
        }

        .mobile-nav-toggle.active span:nth-child(3) {
            transform: rotate(-45deg) translate(7px, -6px);
        }

        @media (max-width: 768px) {
            .mobile-nav-toggle {
                display: flex;
            }

            .docs-layout {
                flex-direction: column;
            }

            .sidebar {
                position: fixed;
                top: 0;
                left: -100%;
                width: 280px;
                height: 100vh;
                background: var(--color-canvas-default);
                border-right: 1px solid var(--color-border-muted);
                padding: 60px 0 24px;
                transition: left 0.3s ease;
                z-index: 1000;
                overflow-y: auto;
            }

            .sidebar.open {
                left: 0;
            }

            .sidebar-header {
                padding: 0 16px 16px;
                margin-bottom: 24px;
                border-bottom: 1px solid var(--color-border-muted);
            }

            .sidebar-header h1 {
                font-size: 16px;
            }

            .sidebar-nav {
                padding: 0 16px;
            }

            .nav-section {
                margin-bottom: 24px;
            }

            .nav-section h3 {
                font-size: 11px;
            }

            .nav-list a {
                font-size: 13px;
                padding: 6px 12px;
            }

            .nav-list .nav-list a {
                font-size: 12px;
                padding: 4px 8px;
            }

            .main-content {
                padding: 60px 16px 16px;
            }

            .main-content h1 {
                font-size: 24px;
                margin-bottom: 12px;
            }

            .main-content h2 {
                font-size: 20px;
                margin: 24px 0 12px 0;
            }

            .connection-status {
                top: 8px;
                right: 8px;
                font-size: 10px;
                padding: 3px 6px;
            }
        }

        {{.CustomCSS}}
        {{.ChromaCSS}}
    </style>
{{end}}

{{define "scripts"}}
    <script>
        (function() {
            const status = document.getElementById('status');
            const sidebar = document.getElementById('sidebar');
            const mobileToggle = document.getElementById('mobile-nav-toggle');

            // Mobile nav toggle
            mobileToggle.addEventListener('click', function() {
                sidebar.classList.toggle('open');
                mobileToggle.classList.toggle('active');
            });

            // Close sidebar when clicking outside on mobile
            document.addEventListener('click', function(e) {
                if (window.innerWidth <= 768 &&
                    !sidebar.contains(e.target) &&
                    !mobileToggle.contains(e.target) &&
                    sidebar.classList.contains('open')) {
                    sidebar.classList.remove('open');
                    mobileToggle.classList.remove('active');
                }
            });

            // Create EventSource for SSE
            const eventSource = new EventSource('/events');

            eventSource.onopen = function() {
                {{if .Verbose}}console.log('SSE connected');{{end}}
                status.textContent = 'Connected';
                status.classList.remove('disconnected');
            };

            eventSource.onmessage = function(event) {
                {{if .Verbose}}console.log('SSE message:', event.data);{{end}}
                if (event.data === 'reload') {
                    {{if .Verbose}}console.log('Reloading page...');{{end}}
                    document.body.style.opacity = '0.8';
                    setTimeout(() => {
                        location.reload();
                    }, 100);
                } else if (event.data === 'shutdown') {
                    {{if .Verbose}}console.log('Server shutting down');{{end}}
                    status.textContent = 'Server shutdown';
                    status.classList.add('disconnected');
                    eventSource.close();
                }
            };

            eventSource.onerror = function(e) {
                {{if .Verbose}}console.log('SSE error:', e);{{end}}
                status.textContent = 'Disconnected';
                status.classList.add('disconnected');

                if (eventSource.readyState === EventSource.CLOSED) {
                    {{if .Verbose}}console.log('Connection closed, attempting reconnect...');{{end}}
                    setTimeout(function() {
                        fetch('/events', { method: 'HEAD' })
                            .then(() => {
                                {{if .Verbose}}console.log('Server is back, reloading...');{{end}}
                                window.location.reload();
                            })
                            .catch(() => {
                                {{if .Verbose}}console.log('Server still down, waiting...');{{end}}
                            });
                    }, 2000);
                }
            };
        })();
    </script>
{{end}}